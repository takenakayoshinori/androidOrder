<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Qr_FRAME"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linkqr_background"
    android:onClick="onClick"
    android:textAlignment="center"
    tools:context="com.kura.andorder.MainActivity">

    <TextView
        android:id="@+id/txQrMsg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#3F51B5"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/log_title"
        android:layout_width="322dp"
        android:layout_height="200dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/linkqr_title"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imgqr_header_right"
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:layout_marginLeft="810dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/linker_header_right"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/log_gun"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/log_big_gun"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/log_dx"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/log_big_dx"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imgQrHelp"
        android:layout_width="1280dp"
        android:layout_height="400dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/linkqr_mount_1"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="-7dp" />

    <Button
        android:id="@+id/btQrback_btback"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginLeft="1000dp"
        android:layout_marginTop="700dp"
        android:background="@drawable/fs_bt_main3"
        android:onClick="onClick"
        android:textColor="#ffffff"
        android:textSize="70sp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="1280dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:background="#D52323"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="250dp"
        android:layout_height="255dp"
        android:layout_marginLeft="560dp"
        android:layout_marginTop="5dp"
        android:background="#D52323"
        android:ems="10"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imgQrHelp_title"
        android:layout_width="700dp"
        android:layout_height="50dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/linkqr_mount_title"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imgQrHelp_title2"
        android:layout_width="900dp"
        android:layout_height="90dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="700dp"
        android:background="@drawable/linkqr_footer"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/ImgQr"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginLeft="575dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="-7dp" />

    <TextView
        android:id="@+id/QrErrBack"
        android:layout_width="1280dp"
        android:layout_height="800dp"
        android:background="@android:color/holo_red_light"
        android:lines="5"
        android:textColor="@color/colorPrimary"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/QrErrMsg"
        android:layout_width="1140dp"
        android:layout_height="400dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="QRコードの生成に失敗しました。 大変申し訳ございませんが、　　　ゲームの実施を希望される場合は　従業員にお声がけ下さい。　　　"
        android:textColor="@color/colorPrimary"
        android:textSize="70sp" />

    <Button
        android:id="@+id/btQrback"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginLeft="1010dp"
        android:layout_marginTop="705dp"
        android:background="@drawable/fs_bt_main3_sub"
        android:onClick="onClick"
        android:text="戻る"
        android:textColor="#ffffff"
        android:textSize="40sp" />

</FrameLayout>