<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:onClick="onClick">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#BF1D1D"
        android:text="TextView" />

    <ImageView
        android:id="@+id/dxalert_title"
        android:layout_width="800dp"
        android:layout_height="150dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dxalerttitle" />

    <ImageView
        android:id="@+id/dxalert_title_sub"
        android:layout_width="650dp"
        android:layout_height="70dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/dxalerttitlesub" />

    <ImageView
        android:id="@+id/dxalertimgQrHelp"
        android:layout_width="1240dp"
        android:layout_height="400dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/dxalert_mount" />

    <ImageView
        android:id="@+id/dxalertImgQr"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#C7CDD5" />

    <Button
        android:id="@+id/btdxalertback"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginLeft="640dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/fs_bt_main3"
        android:onClick="onClick"
        android:textColor="#ffffff"
        android:textSize="70sp" />

    <Button
        android:id="@+id/btdxalert"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginLeft="650dp"
        android:layout_marginTop="195dp"
        android:background="@drawable/fs_bt_main3_sub"
        android:onClick="onClick"
        android:text="OK"
        android:textColor="#ffffff"
        android:textSize="40sp" />

</FrameLayout>