<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ID_ORDER_VIEW"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_ichimatsu"
    android:onClick="onClick"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.54"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/ORDER_TITLE"
            android:layout_width="1200dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="#292525"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.46">

            <TextView
                android:id="@+id/ORDER_NAME"
                android:layout_width="640dp"
                android:layout_height="240dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="0dp"
                android:textColor="#000000"
                android:textSize="60sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/ORDER_UNIT"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="610dp"
                android:layout_marginTop="30dp"
                android:gravity="bottom|left"
                android:paddingTop="50dp"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="60sp"
                android:typeface="monospace" />

            <ImageView
                android:id="@+id/ORDER_IMG"
                android:layout_width="338dp"
                android:layout_height="240dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="880dp"
                android:layout_marginTop="0dp"
                android:background="#1d1a18"
                android:contentDescription="@string/noImg" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ORDER_OPT_0"
                android:layout_width="550dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/fs_bt_main1"
                android:onClick="onClick"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="50sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <Button
                android:id="@+id/ORDER_OPT_1"
                android:layout_width="550dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/fs_bt_main1"
                android:onClick="onClick"
                android:textColor="#ffffff"
                android:textSize="50sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <Button
                android:id="@+id/ORDER_OPT_2"
                android:layout_width="360dp"
                android:layout_height="180dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/fs_bt_main1"
                android:onClick="onClick"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ORDER_NUM1"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:background="@drawable/fs_bt_main4"
                android:onClick="onClick"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="60sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <Button
                android:id="@+id/ORDER_NUM2"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/fs_bt_main2"
                android:onClick="onClick"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="60sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/ORDER_NUM3"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/fs_bt_main2"
                android:onClick="onClick"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="60sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/ORDER_NUM4"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/fs_bt_main2"
                android:onClick="onClick"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="60sp"
                android:typeface="monospace" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/OrderOn_Sub"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_marginLeft="200dp"
                android:background="@drawable/fs_bt_main4"
                android:onClick="onClick"
                android:textColor="#ffffff"
                android:textSize="70sp" />

            <Button
                android:id="@+id/OrderOn"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/fs_bt_main4_sub"
                android:onClick="onClick"
                android:textColor="#ffffff"
                android:textSize="65sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/OrderBack_sub"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_marginLeft="700dp"
                android:background="@drawable/fs_bt_main3"
                android:onClick="onClick"
                android:textColor="#ffffff"
                android:textSize="70sp" />

            <Button
                android:id="@+id/OrderBack"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_marginLeft="710dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/fs_bt_main3_sub"
                android:onClick="onClick"
                android:textColor="#ffffff"
                android:textSize="65sp" />

            <Button
                android:id="@+id/OrderSecondRequest"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/fs_bt_main1_sub"
                android:lines="2"
                android:onClick="onClick"
                android:text="セカンド\n通知"
                android:textColor="#ffffff"
                android:textSize="36sp" />
        </FrameLayout>


    </LinearLayout>
</LinearLayout>