<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_ichimatsu"
    android:onClick="onClick"
    android:weightSum="1">


    <TextView
        android:id="@+id/tvTopTitle"
        android:layout_width="1200dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="#a52a2a"
        android:text="@string/ChooseLanguage"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:id="@+id/btTopLangu1_sub"
            android:background="@drawable/fs_bt_main3"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_marginLeft="100dp"
            android:onClick="onClick" />

        <Button
            android:layout_width="280dp"
            android:layout_height="160dp"
            android:id="@+id/btTopLangu1"
            android:background="@drawable/fs_bt_main3_sub"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:onClick="onClick" />


        <Button
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:id="@+id/btTopLangu2_sub"
            android:background="@drawable/fs_bt_main3"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:onClick="onClick" />

        <Button
            android:layout_width="280dp"
            android:layout_height="160dp"
            android:id="@+id/btTopLangu2"
            android:background="@drawable/fs_bt_main3_sub"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:onClick="onClick" />

        <Button
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:id="@+id/btTopLangu3_sub"
            android:background="@drawable/fs_bt_main3"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_marginLeft="900dp"
            android:layout_gravity="top"
            android:onClick="onClick" />

        <Button
            android:layout_width="280dp"
            android:layout_height="160dp"
            android:id="@+id/btTopLangu3"
            android:background="@drawable/fs_bt_main3_sub"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_marginLeft="910dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:onClick="onClick" />
    </FrameLayout>

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:id="@+id/btTopLangu4_sub"
            android:background="@drawable/fs_bt_main3"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_marginLeft="100dp"
            android:onClick="onClick" />

        <Button
            android:layout_width="280dp"
            android:layout_height="160dp"
            android:id="@+id/btTopLangu4"
            android:background="@drawable/fs_bt_main3_sub"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:onClick="onClick" />

        <Button
            android:id="@+id/btTopLangu5_sub"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:background="@drawable/fs_bt_main3"
            android:onClick="onClick"
            android:textColor="#ffffff"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btTopLangu5"
            android:layout_width="280dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fs_bt_main3_sub"
            android:onClick="onClick"
            android:textColor="#ffffff"
            android:textSize="50sp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:id="@+id/btTopLangu6_sub"
            android:background="@drawable/fs_bt_main3"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_marginLeft="900dp"
            android:layout_gravity="top"
            android:onClick="onClick" />

        <Button
            android:layout_width="280dp"
            android:layout_height="160dp"
            android:id="@+id/btTopLangu6"
            android:background="@drawable/fs_bt_main3_sub"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_marginLeft="910dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:onClick="onClick" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        >
    <Button
        android:layout_width="600dp"
        android:layout_height="120dp"
        android:text="戻る"
        android:id="@+id/btTopBack_Sub"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/fs_bt_main4"
        android:textColor="#ffffff"
        android:textSize="70sp"
        android:onClick="onClick" />
        <Button
            android:layout_width="580dp"
            android:layout_height="100dp"
            android:text="戻る"
            android:id="@+id/btTopBack"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/fs_bt_main4_sub"
            android:textColor="#ffffff"
            android:textSize="70sp"
            android:onClick="onClick" />
    </FrameLayout>

</LinearLayout>
